{
  "compilerOptions": {
    "target": "ES2017", // or a higher version if needed
    "module": "nodenext", // Output as ES modules
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "declaration": true, // Generate .d.ts files
    "outDir": "./dist" // Output directory
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
